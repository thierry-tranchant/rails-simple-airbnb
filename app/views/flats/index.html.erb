<div class="container">
  <h2 class="mt-4">All our flats (<%= @flats.count %>)</h2>
  <div class="flat-cards">
    <% @flats.each do |flat| %>
    <div class="flat-card">
      <div class="flat-card-upper">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <div class="flat-card-numbers d-flex">
          <p><i class="fas fa-user-friends"></i><%= flat.number_of_guests %></p>
          <p class='mx-2'><i class="fas fa-euro-sign"></i><%= flat.price_per_night %></p>
        </div>
      </div>
      <div class="flat-card-link">
        <%= link_to 'More info', flat_path(flat) %>
      </div>
    </div>
    <% end %>
  </div>
</div>


